<%- include('../partials/header', {title: "Buyer Beranda"}) %>
<%- include('partials/navbar') %>
<div class="container">
  <div class="card text-white bg-primary my-3">
    <div class="row g-0">
      <div class="col-md-12">
        <div class="card-body">
          <h5 class="card-title">Saldo Anda : <%= formatUang(data.UsersDetail.money) %></h5>
          <p class="card-text">Silakan tambah saldo sebelum membeli produk investasi</p>
          <a class="btn btn-light" href="/buyer/saldo" role="button">Tambah Saldo</a>
        </div>
      </div>
    </div>
  </div>
  <div class="row my-3">
    <div class="col-md-4">
      <h2>Daftar Produk Investasi</h2>
    </div>
    <div class="col-md-4">
      <p>Sort : <a href="/buyer?sort=price&order=desc">Harga Tertinggi</a> | <a href="/buyer?sort=price&order=asc">Harga Terendah</a></p>
    </div>
    <div class="col-md-4">
      <!-- <form action="/buyer">
        <div class="input-group">
          <input type="text" name="search" class="form-control" placeholder="Cari Nama Produk">
          <input class="btn btn-primary" type="submit" value="search">
        </div>
      </form> -->
    </div>
  </div>
  <div class="row my-3">
    <% product.forEach(val => { %>
    <div class="col-md-4">
      <div class="card mb-3">
        <div class="row g-0">
          <div class="col-md-12">
            <div class="card-body">
              <h5 class="card-title"><%= val.name %></h5>
              <p class="card-text"><small class="text-muted"><%= val.User.name %></small></p>
              <p class="card-text">
                Return : <%= val.price_return %>%<br>
                Risk : <%= val.risk %>%
              </p>
              <p class="card-text fw-bold"><%= formatUang(val.price) %></p>
              <a class="btn btn-primary" href="/buyer/buy/<%= val.id %>" role="button">Beli Produk</a>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>    

<%- include('../partials/footer') %>